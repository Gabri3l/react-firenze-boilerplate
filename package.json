{
  "name": "react-firenze-boilerplate",
  "version": "1.0.0",
  "description": "An opinionated react boilerplate",
  "main": "index.js",
  "author": "Gabriele Cimato <gabriele.cimato@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js -p",
    "build:dev": "cross-env webpack --config ./config/webpack.config.js -d",
    "build:server": "cross-env NODE_ENV=server webpack --config ./config/webpack.config.js -p",
    "dev": "webpack-dev-server --config ./config/webpack.config.js",
    "lint": "eslint **/*.{js,jsx} --quiet",
    "prestart": "npm run build && npm run build:server",
    "start": "cross-env NODE_ENV=server node dist/server.js",
    "stats": "cross-env NODE_ENV=production webpack --profile --json > stats.json --config ./config/webpack.config.js",
    "watch": "webpack --watch"
  },
  "dependencies": {
    "babel-plugin-dynamic-import-webpack": "^1.0.1",
