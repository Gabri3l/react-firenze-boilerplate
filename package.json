{
  "name": "react-firenze-boilerplate",
  "version": "1.0.0",
  "description": "An opinionated react boilerplate",
  "main": "index.js",
  "author": "Gabriele Cimato <gabriele.cimato@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-firenze/react-firenze-boilerplate.git"
  },
  "keywords": [
    "react",
    "boilerplate",
    "redux",
    "jest",
    "server side rendering"
  ],
  "bugs": {
    "url": "https://github.com/react-firenze/react-firenze-boilerplate/issues"
  },
  "homepage": "https://github.com/react-firenze/react-firenze-boilerplate#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": ["prettier --write", "eslint --fix", "git add"]
  },
  "scripts": {
    "build":
      "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js",
    "build:dev": "cross-env webpack --config ./config/webpack.config.js -d",
    "build:server":
      "cross-env NODE_ENV=server webpack --config ./config/webpack.config.js",
    "dev": "webpack-dev-server --config ./config/webpack.config.js",
    "lint": "eslint --fix **/*.{js,jsx}",
    "prettier": "rettier --write **/*.{js,jsx}",
    "format": "npm run prettier && npm run lint",
    "postinstall": "npm run build && npm run build:server",
    "start": "cross-env NODE_ENV=server node dist/server.js",
    "stats":
      "cross-env NODE_ENV=production webpack --profile --json > stats.json --config ./config/webpack.config.js",
    "test": "jest"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "clean-webpack-plugin": "^0.1.17",
    "compression": "^1.7.1",
    "cross-env": "^5.1.3",
    "dotenv": "^4.0.0",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "file-loader": "^0.11.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "glamor": "^2.20.40",
    "glamorous": "^4.11.4",
    "html-webpack-harddisk-plugin": "^0.1.0",
    "html-webpack-plugin": "^2.30.1",
    "image-webpack-loader": "^3.6.0",
    "lodash": "^4.17.4",
    "nyan-progress-webpack-plugin": "^1.2.0",
    "open-browser-webpack-plugin": "0.0.5",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-svg-loader": "^1.1.1",
    "redux": "^3.7.2",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "husky": "^0.15.0-rc.8",
    "jest": "^21.2.1",
    "lint-staged": "^7.0.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^8.8.1",
    "react-hot-loader": "^3.1.3",
    "react-test-renderer": "^16.2.0",
    "webpack-dev-server": "^2.11.1"
  }
}
